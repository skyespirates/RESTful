<%- include("../partials/header") %>
    <div class="ui main text container segment">
        <div class="ui huge header">New Post</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="content[title]" placeholder="title">
            </div>
            <div class="field">
                <label>Image's URL</label>
                <input type="text" name="content[image]" placeholder="image">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="content[description]" cols="30" rows="10" placeholder="description" required></textarea>
            </div>
            <div class="field">
                <input class="ui primary button" type="submit">
            </div>
        </form>
    </div>

