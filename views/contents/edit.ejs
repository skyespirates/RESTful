<%- include("../partials/header") %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit Post</div>
        <form class="ui form" action="/blogs/<%= found._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="edit[title]" value="<%= found.title %>">
            </div>
            <div class="field">
                <label>Image's URL</label>
                <input type="text" name="edit[image]" value="<%= found.image %>">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="edit[description]" cols="30" rows="10" required><%= found.description %></textarea>
            </div>
            <div class="field">
                <input class="ui primary button" type="submit">
            </div>
        </form>
    </div>

<%- include("../partials/footer") %>