<%- include("../partials/header") %>
    <div class="ui main text container segment">
        <div class="ui huge header">Add Comment to <%= content.title %></div>
        <form class="ui form" action="/blogs/<%= content._id %>/comments" method="POST">
            <div class="field">
                <label>Comment</label>
                <input type="text" name="comment[text]" placeholder="Comment here...">
            </div>
            <div class="field">
                <label>Author</label>
                <input type="text" name="comment[author]" placeholder="Author">
            </div>
            <div class="field">
                <input class="ui primary button" type="submit">
            </div>
        </form>
    </div>

<%- include("../partials/footer") %>